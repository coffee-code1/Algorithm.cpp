#include<bits/stdc++.h>
using namespace std;
long long arr[2000001];
int main(){
   long long n,m,ai;
    cin>>n>>m;
    for(int i=1;i<=n;i++){
       cin>>ai;
        arr[i]=ai;
    }
    sort(arr+1,arr+1+n);//这里小心逗号是英文的啊
    int l=0,r=arr[n],mid,result=0;
    while(l<=r){
        //current每次都要刷新重置一次所以放循环里
        long long current=0;//数据过大所以开longlong
        mid=l+(r-l)/2;
        for(int i=1;i<=n;i++){
            if(arr[i]>mid){
                current+=arr[i]-mid;
            }
        }
        if(current>=m){
            result=mid;//这里要求链锯的最高高度也就是木材高度变小所以与常规的不同
            l=mid+1;
        } 
        else r=mid-1;
    }
    cout<<result;
    
}
